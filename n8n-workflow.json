{
  "name": "AI Chatbot Workflow",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "send-message",
        "responseMode": "lastNode",
        "options": {}
      },
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [
        -300,
        0
      ],
      "name": "Webhook"
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://openrouter.ai/api/v1/chat/completions",
        "sendHeaders": true,
        "headerParameters": [
          {
            "name": "Content-Type",
            "value": "application/json"
          },
          {
            "name": "Authorization",
            "value": "Bearer {{$credentials.openrouter.apiKey}}"
          }
        ],
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"model\": \"openai/gpt-3.5-turbo\",\n  \"messages\": [\n    { \"role\": \"system\", \"content\": \"You are a helpful chatbot.\" },\n    { \"role\": \"user\", \"content\": {{$json[\"body\"][\"message\"]}} }\n  ]\n}"
      },
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [
        0,
        0
      ],
      "name": "Send to AI"
    },
    {
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "name": "botReply",
              "value": "={{ $json[\"choices\"][0][\"message\"][\"content\"] }}",
              "type": "string"
            },
            {
              "name": "variables",
              "value": "={\"chat_id\": $json[\"body\"][\"chat_id\"], \"text\": $json[\"botReply\"]}",
              "type": "json"
            }
          ]
        },
        "options": {}
      },
      "type": "n8n-nodes-base.set",
      "typeVersion": 3,
      "position": [
        180,
        0
      ],
      "name": "Set Bot Reply Variables"
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://rvmtvbxomszjibeiocvu.hasura.eu-central-1.nhost.run/v1/graphql",
        "sendHeaders": true,
        "headerParameters": [
          {
            "name": "Content-Type",
            "value": "application/json"
          },
          {
            "name": "x-hasura-admin-secret",
            "value": "{{$credentials.nhost.adminSecret}}"
          }
        ],
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"query\": \"mutation InsertBotMessage($chat_id: uuid!, $text: String!) { insert_messages_one(object: { chat_id: $chat_id, sender: \\\"bot\\\", text: $text }) { id chat_id sender text created_at } }\",\n  \"variables\": $json[\"variables\"]\n}"
      },
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [
        380,
        0
      ],
      "name": "Insert Bot Message"
    },
    {
      "parameters": {
        "options": {
          "responseCode": 200,
          "responseHeaders": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        }
      },
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [
        580,
        0
      ],
      "name": "Respond to Frontend"
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "Send to AI",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Send to AI": {
      "main": [
        [
          {
            "node": "Set Bot Reply Variables",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Set Bot Reply Variables": {
      "main": [
        [
          {
            "node": "Insert Bot Message",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Insert Bot Message": {
      "main": [
        [
          {
            "node": "Respond to Frontend",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  ],
  "active": true,
  "settings": {},
  "versionId": "1"
}
